<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "User" table = "USER">

        <meta attribute = "class-description">
            This class contains the user detail.
        </meta>

        <id name = "id" type = "long" column = "id">
            <!-- <generator class="native"/> -->
        </id>

        <!-- <property name = "groupID" column = "groupID" type = "string"/> -->
        <many-to-one name = "groupID" column = "groupID" class = "Group" not-null="true"/>
    </class>

    <class name = "Group" table = "GROUP">

        <meta attribute = "class-description">
            This class contains the group detail.
        </meta>

        <id name = "id" type = "string" column = "id">
            <!-- <generator class="native"/> -->
        </id>

        <many-to-one name = "scheduleID" column = "scheduleID" unique="true" class = "Schedule" not-null="true"/>
    </class>

    <class name = "Schedule" table = "SCHEDULE">

        <meta attribute = "class-description">
            This class contains the schedule detail.
        </meta>

        <id name = "id" type = "int" column = "id">
            <!-- <generator class="native"/> -->
        </id>

        <property name = "dayJSON" column = "dayJSON" type = "text"/>
    </class>
</hibernate-mapping>